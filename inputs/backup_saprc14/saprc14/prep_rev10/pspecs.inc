C       PSPECS.FTN                      SPECIFICATIONS FOR PREP
C
C       WRITTEN BY W.P.L. CARTER
C       UPDATED AND MAINTAINED BY S.E. HEFFRON
C       LAST UPDATE:  W.P.L. CARTER  1/4/87
C
C	MJM added SNO()	11/8/03
C
C       MAXIMUM NUMBER OF COEFFICIENTS CHANGED BY S.P. 12/27/90
C            FROM 480 TO 680
C
C       THIS IS AN "INCLUDE" FILE WHICH GIVES THE SPECIFICATIONS FOR THE
C       MODEL PREPARATION PROGRAM TO PROCESS CHEMICAL MECHANISMS FOR
C       USE IN AIRSHED MODELS.  IT GIVES THE COMMON PARAMETERS, VARIABLES
C       AND ARRAYS USED BY THE VARIOUS MODULES OF THIS PROGRAM.
C
C
C       FILE UNIT ASSIGNMENTS.  ALLOWS FOR UP TO 3 LEVELS OF INDIRECT
C       INPUT
C
        INTEGER UNIT1,UNIT2,OUT,UNIT3,OUT2,TYP1
        PARAMETER (UNIT1=7,UNIT2=8,OUT=9,UNIT3=10,OUT2=11,TYP1=12)
C
C       INCLUDE FILE FOR ARRAYS USED BY "INBUF" UTILITY ROUTINE.
C
        INCLUDE 'newiobuf.inc'
C
C
C       MAXIMUM DIMENSIONS :
C
        PARAMETER (MAXNS=10000,MAXSS=1000)
        PARAMETER (MAXCO=3500)
C                              ! MAXCO-MAXCOV IS MAX NO. CONSTANT COEF'S
        PARAMETER (MAXCOV=2000)
        PARAMETER (NCOC1=MAXCOV+1)
C                                 ! LOC IN COEF ARRAY WHERE CONST COEFS BEGIN
        PARAMETER (MAXRXN=60000)
        PARAMETER (MAXKBF=5000)
C                               ! LENGTH OF BUFFER ARRAY FOR R4 KIN. PRMS.
        PARAMETER (MAXMAX=60000)
C                               !GE MAXIMUM (MAXRXN,MAXCO,MAXNS)
        PARAMETER (MAXPHK=50)
        PARAMETER (MAXPRD=10*MAXRXN)
        PARAMETER (MAXRCT=3)
C
        PARAMETER (MAXAQY=950)
C                                !MAX NO WAVELENGTHS IN PHOTOLYSIS SET
        PARAMETER (MAXSOMC=30,MAXSOMO=7)
C                                !MAX DIMS OF A SOM GRID
C
C
C  -    NOTE:   FORMATS 1022 AND 1026 IN 'RDRXN' WILL HAVE TO BE
C                       CHANGED TO I5 OR BETTER IF MAXMAX.GE.500
C
C       PROGRAM CONTROL PARAMETERS
C
      LOGICAL   ASMPRT,EOF,VCODFD,VCOCAL(8)
      LOGICAL   YESPRP,NOPRP,PPM
      REAL*4 LITTLE
      CHARACTER*40 MODUIC,PHFUIC,LOGUIC,TMPUIC
      CHARACTER*16 MODFIL
      COMMON /CONTRL/ LITTLE,NERR,IND,ASMPRT,EOF,VCODFD,VCOCAL
     & ,YESPRP,NOPRP,PPM
      COMMON /CNTRL2/ MODUIC,PHFUIC,LOGUIC,TMPUIC,MODFIL
C
C       NON-ARRAY MODEL PARAMETERS
C
C       NOTE:  NSC, .., NDEL ARE EQUIVALENCED TO AN ARRAY IN
C       REORDR, SO DO NOT CHANGE THIS ORDERING OR DELETE ANY
C       OF THESE WITHOUT CHANGING REORDR.  NDUM NOT USED IN THIS
C       VERSION.
C
        COMMON /MODPRM/ NS,NCOEFV,NSC,NB,NDUM,NDY,NSS,NDEL,NRXN,LOCKBF
     &   ,TEMPR,TREF,NPHOTK,NCOC2,NTS
     &   ,N0,NA1,NA2,NSC1,NSC2,NB1,NB2,ND1,ND2,NS1,NS2,N01,NB0
     &   ,INDLIL,NST,NSOM
C
C       ARRAY PARMS USED FOR BOTH READ, SORT, AND DIFFUN
C
        BYTE RXTYP(MAXRXN),SOMCHECK(MAXSOMC,0:MAXSOMO,MAXNS)
        INTEGER   NRTOSR(MAXRXN),NPRODS(MAXRXN+1),LKBUF(MAXRXN)
     &   ,IRTOSR(MAXRCT,MAXRXN),IPRODS(MAXPRD),TTYPES(MAXNS)
     &   ,SOMGRID(4,MAXNS),ICOUNTPF
        REAL*4    PFUNC(4,MAXNS), CFRAG(MAXNS)
        COMMON /MODDAT/ NRTOSR,NPRODS,IRTOSR,IPRODS,LKBUF,RXTYP
     &   ,TTYPES,SOMGRID,SOMCHECK,PFUNC,CFRAG
C
C       ARRAY PARMS USED BY READ (AND SAVE) ONLY
C
C        CHARACTER NAME(MAXNS)*16,COEFNM(MAXCOV)*8,RXNLBL(MAXRXN)*6
        CHARACTER NAME(MAXNS)*16,COEFNM(MAXCOV)*8,RXNLBL(MAXRXN)*8
     &  ,TITLE*80,PHOTNM(MAXPHK)*8,TNAME(MAXNS)*16,TATOM(MAXNS)*1
     &  ,SOMNAME(MAXNS)*16
        COMMON /RDCHR/ NAME,COEFNM,RXNLBL,TITLE,PHOTNM,TNAME,TATOM,
     &                 SOMNAME
C
        LOGICAL   PFTYPE(MAXPHK)
        INTEGER   IPHOTR(MAXPHK),SPTYP(MAXNS),NNO(MAXNS),SNO(MAXNS),
     &            CSNO(MAXNS),NSNO(MAXNS),SSNO(MAXNS),XSNO(MAXNS),
     &            OSNO(MAXNS)
        REAL*4 COEF(MAXCO),KPBUF(MAXKBF),CONC0(MAXNS),MWT(MAXNS)
     &   ,CNO(MAXNS),XNO(MAXNS),ONO(MAXNS)
        COMMON /RDDAT/ COEF,KPBUF,IPHOTR,PFTYPE,SPTYP,CONC0
     &   ,NNO,MWT,CNO,SNO,XNO,ONO,CSNO,NSNO,SSNO,XSNO,OSNO
c
c common blk variables for the typrxn subroutine
c
        integer typ_nrxnlbl
C        character typ_rxnlbl(maxrxn)*6
        character typ_rxnlbl(maxrxn)*8
        common /typblk1/ typ_nrxnlbl
        common /typblk2/ typ_rxnlbl
c
c common blk variables for the somrxn subroutine
c
        integer som_nrxnlbl
C        character som_rxnlbl(maxrxn)*6
        character som_rxnlbl(maxrxn)*8
        common /somblk1/ som_nrxnlbl
        common /somblk2/ som_rxnlbl
c
C       <END OF PSPECS.FTN INCLUDE FILE>
